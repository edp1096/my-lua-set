{
    "update.mode": "none",
    "workbench.startupEditor": "none",
    "workbench.settings.editor": "json",
    "workbench.sideBar.location": "right",
    "workbench.editor.autoLockGroups": {
        "terminalEditor": false,
    },
    "telemetry.telemetryLevel": "off",
    // "editor.fontFamily": "D2Coding ligature, Cascadia Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 16.7,
    "editor.minimap.enabled": false,
    "editor.bracketPairColorization.enabled": true,
    "breadcrumbs.enabled": true,
    "files.autoSave": "afterDelay",
    "window.zoomLevel": -1,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "source.go keyword.package.go",
                    "source.go keyword.import.go",
                    "source.go keyword.function.go",
                    "source.go keyword.type.go",
                    "source.go keyword.struct.go",
                    "source.go keyword.interface.go",
                    "source.go keyword.const.go",
                    "source.go keyword.var.go",
                    "source.go keyword.map.go",
                    "source.go keyword.channel.go",
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "comment",
                    "constant.language",
                    "keyword.control",
                    "keyword.operator.expression",
                    "keyword.other",
                    "keyword.operator.new",
                    "variable.language",
                    "entity.other.attribute-name",
                    "storage",
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            },
        ]
    },
    "security.workspace.trust.enabled": false,
    "scm.alwaysShowRepositories": true,
    "terminal.integrated.cwd": "${workspaceFolder}",
    "workbench.iconTheme": "vscode-icons",
    "vsicons.dontShowNewVersionMessage": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "never",
    "window.commandCenter": false,
    "launcher.commands": [
        {
            "description": "Run Love2D",
            "executable": "love.exe",
            "parameters": ".",
            "startIn": "%workspace%"
        },
        {
            "description": "Pack current Love2D game to dist",
            "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "parameters": "create_love2d_dist.ps1 -GameName \"(Split-Path -Leaf '%workspace%')\"",
            "startIn": "%workspace%"
        },
        {
            "description": "Run ResourceHacker",
            "executable": "ResourceHacker.exe",
            "startIn": "%workspace%"
        },
        {
            "description": "Run Defold",
            "executable": "defold.exe",
            "startIn": "%workspace%"
        },
        {
            "description": "Run Tiled",
            "executable": "tiled.exe",
            "startIn": "%workspace%"
        },
        // {
        //     "description": "Run Aseprite",
        //     "executable": "aseprite.exe",
        //     "startIn": "%workspace%"
        // },
        // {
        //     "description": "Run Libreprite",
        //     "executable": "libresprite.exe",
        //     "startIn": "%workspace%"
        // },
    ]
}